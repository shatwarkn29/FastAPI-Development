[MASTER]
disable=W0611, W0622 , W0621 , W0703, W0107, C0114, C0115, C0116, C0301, C0303, C0325, C0411, R0903, R1705 , E1101 , C0104 , C0103

[REPORTS]
reports=no
msg-template={msg_id}: {msg}

[FORMAT]
max-line-length=100
indent-string='    '
single-line-class-stmt=yes
single-line-if-stmt=yes

[SIMILARITIES]
min-similarity-lines=4

[DESIGN]
max-args=5
max-branches=12
max-locals=15
max-statements=50

[TYPECHECK]
generated-members=

[CLASSES]
valid-classmethod-first-arg=cls

[VARIABLES]
ignored-argument-names=_.*|^ignored_|^unused_
allow-global-unused-variables=yes

[IMPORTS]
allow-any-import-level=yes
known-third-party=flask,django,requests

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[LOGGING]
logging-format-style=new
